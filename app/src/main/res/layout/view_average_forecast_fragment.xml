<org.fs.weather.widget.ElevatedConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:support="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:background="#DDDDDD"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <TextView
    android:id="@+id/viewTextMonth"
    support:layout_constraintStart_toStartOf="parent"
    support:layout_constraintTop_toTopOf="parent"
    support:layout_constraintEnd_toEndOf="parent"
    android:layout_margin="8dip"
    android:gravity="center"
    tools:text="@string/app_name"
    android:textAppearance="@style/TextAppearance.AppCompat.Headline"
    android:layout_width="0dip"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/viewTextMinTemp"
    support:layout_constraintStart_toStartOf="parent"
    support:layout_constraintTop_toBottomOf="@+id/viewTextMonth"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    tools:text="@string/app_name"
    android:layout_margin="8dip"
    support:layout_constraintEnd_toEndOf="parent"
    android:layout_width="0dip"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/viewTextMaxTemp"
    support:layout_constraintStart_toStartOf="parent"
    support:layout_constraintTop_toBottomOf="@+id/viewTextMinTemp"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    tools:text="@string/app_name"
    android:layout_margin="8dip"
    support:layout_constraintEnd_toEndOf="parent"
    android:layout_width="0dip"
    android:layout_height="wrap_content" />

  <TextView
    android:id="@+id/viewTextDailyRainfall"
    support:layout_constraintStart_toStartOf="parent"
    support:layout_constraintTop_toBottomOf="@+id/viewTextMaxTemp"
    support:layout_constraintBottom_toBottomOf="parent"
    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
    tools:text="@string/app_name"
    android:layout_margin="8dip"
    support:layout_constraintEnd_toEndOf="parent"
    android:layout_width="0dip"
    android:layout_height="wrap_content" />

</org.fs.weather.widget.ElevatedConstraintLayout>